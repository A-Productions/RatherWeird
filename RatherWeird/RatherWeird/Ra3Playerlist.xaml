<UserControl x:Class="RatherWeird.Ra3Playerlist"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RatherWeird"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid>
            <ListView x:Name="lstView" Margin="10,26,10,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nickname" Width="120" DisplayMemberBinding="{Binding Nickname}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Label x:Name="lblPlayers" Content="Players: ??" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        </Grid>

    </Grid>
</UserControl>
